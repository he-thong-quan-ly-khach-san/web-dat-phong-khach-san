                <div class="cell-lg-4 cell-xl-3 reveal-lg-flex">
                    <div class="hotel-booking-form">
                        @*@Html.Action("DatPhong", "Phong")*@
                        <h3>Đặt Phòng</h3>
                        <form class="rd-mailform" data-form-output="form-output-global" action="@Url.Action("DatPhong", "Home")" method="post">
                            <div class="range range-sm-bottom spacing-20">
                                <div class="cell-lg-12 cell-md-4">
                                    <p class="text-uppercase">Tên của bạn</p>
                                    <div class="form-wrap">
                                        @Html.TextBoxFor(model => model.TEN_KHACHHANG, new { @class = "form-input", id = "contact-first-name" })
                                        @*<input class="form-input" id="contact-first-name" type="text" name="name" data-constraints="">*@
                                        <label class="form-label" for="contact-first-name">Your full Name</label>
                                    </div>
                                </div>
                                <div class="cell-lg-12 cell-md-4 cell-sm-6">
                                    <p class="text-uppercase">Ngày đến</p>
                                    <div class="form-wrap">
                                        <label class="form-label form-label-icon" for="date-in"><span class="icon icon-primary fa-calendar"></span><span>Check-in Date</span></label>
                                        @Html.TextBoxFor(model => model.NGAYDEN, "{0:yyyy-MM-dd}", new { @class = "form-input", id = "date-in", data_time_picker = "date" })
                                    </div>
                                </div>
                                <div class="cell-lg-12 cell-md-4 cell-sm-6">
                                    <p class="text-uppercase">Ngày đi</p>
                                    <div class="form-wrap">
                                        <label class="form-label form-label-icon" for="date-out"><span class="icon icon-primary fa-calendar"></span><span>Check-out Date</span></label>
                                        @Html.TextBoxFor(model => model.NGAYDI, "{0:yyyy-MM-dd}", new { @class = "form-input", id = "date-out", data_time_picker = "date" })
                                    </div>
                                </div>
                                <div class="cell-lg-12 cell-md-4 cell-sm-6">
                                    <p class="text-uppercase">Số điện thoại</p>
                                    <div class="form-wrap">
                                        <label class="form-label form-label-icon" for="date-out"><span class="icon icon-primary fa-phone"></span><span>Phone</span></label>
                                        @Html.TextBoxFor(model => model.SODIENTHOAI, new { @class = "form-input" })
                                    </div>
                                </div>
                                <div class="cell-lg-12 cell-md-4">
                                    <button class="button button-primary button-square button-block button-effect-ujarak" type="submit"><span>Xác nhận đặt phòng</span></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

